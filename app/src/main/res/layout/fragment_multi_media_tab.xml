<?xml version="1.0" encoding="utf-8"?>
<layout>

    <data>

        <variable
            name="multi_media_tab"
            type="com.mr_w.resourceplus.fragments.multi_media_tab.MultiMediaTabViewModel" />
    </data>

    <FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/white"
        tools:context=".fragments.multi_media_tab.MultiMediaTab">

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/multiMedia"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scrollbars="none" />

        <TextView
            android:id="@+id/noMedia"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:text="No Media"
            android:textSize="@dimen/_16ssp"
            android:visibility="gone" />

    </FrameLayout>

</layout>