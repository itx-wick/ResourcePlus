<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>

        <variable
            name="conv_detail"
            type="com.mr_w.resourceplus.fragments.conversation_detail.ConversationDetailViewModel" />
    </data>

    <RelativeLayout xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".fragments.conversation_detail.ConversationDetailFragment">

        <RelativeLayout xmlns:tools="http://schemas.android.com/tools"
            android:id="@+id/secondaryLayout"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_centerInParent="true"
            android:background="@color/white"
            android:visibility="gone"
            tools:context=".fragments.search_participants.SearchParticipantFragment">

            <com.google.android.material.appbar.AppBarLayout
                android:id="@+id/toolbar"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:liftOnScroll="true">

                <com.google.android.material.appbar.MaterialToolbar
                    android:id="@+id/topAppBar"
                    style="@style/Widget.MaterialComponents.Toolbar.Primary"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center_vertical"
                    app:contentInsetEnd="@dimen/_10sdp"
                    app:contentInsetStart="@dimen/_10sdp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@null"
                        android:gravity="center_vertical"
                        android:orientation="horizontal">

                        <ImageView
                            android:id="@+id/btn_back"
                            android:layout_width="@dimen/_30sdp"
                            android:layout_height="@dimen/_30sdp"
                            android:onClick="@{conv_detail::BackSearch}"
                            android:padding="@dimen/_5sdp"
                            android:src="@drawable/ic_arrow_back"
                            app:tint="@android:color/white" />

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginEnd="@dimen/_10sdp"
                            android:orientation="vertical">

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:gravity="center"
                                android:orientation="horizontal">

                                <EditText
                                    android:id="@+id/searchBar"
                                    android:layout_width="0dp"
                                    android:layout_height="@dimen/_30sdp"
                                    android:layout_marginStart="@dimen/_5sdp"
                                    android:layout_weight="1"
                                    android:background="@null"
                                    android:cursorVisible="true"
                                    android:hint="Search..."
                                    android:importantForAutofill="no"
                                    android:inputType="text"
                                    android:textColor="@android:color/white"
                                    android:textColorHint="#EEEEEE"
                                    android:textCursorDrawable="@null"
                                    android:textSize="@dimen/_12ssp" />

                                <ImageView
                                    android:id="@+id/clear"
                                    android:layout_width="@dimen/_25sdp"
                                    android:layout_height="@dimen/_25sdp"
                                    android:background="@android:color/transparent"
                                    android:onClick="@{conv_detail::ClearSearch}"
                                    android:padding="@dimen/_5sdp"
                                    android:src="@drawable/ic_close"
                                    android:visibility="gone"
                                    app:tint="@android:color/white" />

                            </LinearLayout>

                            <View
                                android:layout_width="match_parent"
                                android:layout_height="@dimen/_1sdp"
                                android:layout_marginEnd="@dimen/_5sdp"
                                android:background="@color/white" />

                        </LinearLayout>

                    </LinearLayout>

                </com.google.android.material.appbar.MaterialToolbar>

            </com.google.android.material.appbar.AppBarLayout>

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/participantsRecycler"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/toolbar"
                android:layout_centerHorizontal="true"
                android:layout_margin="@dimen/_5sdp"
                android:scrollbars="none" />

        </RelativeLayout>

        <androidx.core.widget.NestedScrollView
            android:id="@+id/primaryLayout"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_centerInParent="true"
            android:background="@color/white_smoke"
            android:scrollbars="none">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <RelativeLayout
                    android:id="@+id/header"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_180sdp"
                    android:layout_alignParentTop="true"
                    android:layout_centerHorizontal="true"
                    android:background="@color/black">

                    <ImageView
                        android:id="@+id/profileImage"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_centerInParent="true"
                        android:adjustViewBounds="true"
                        android:alpha="0.4"
                        android:background="@color/black"
                        android:contentDescription="@string/error"
                        android:onClick="@{conv_detail::OpenProfileImage}"
                        android:scaleType="center"
                        android:src="@drawable/no_pic" />

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/_35sdp">

                        <ImageView
                            android:id="@+id/btnBack"
                            android:layout_width="@dimen/_30sdp"
                            android:layout_height="@dimen/_30sdp"
                            android:layout_alignParentStart="true"
                            android:layout_centerVertical="true"
                            android:layout_marginStart="@dimen/_10sdp"
                            android:contentDescription="@string/error"
                            android:onClick="@{conv_detail::OnBack}"
                            android:padding="@dimen/_5sdp"
                            android:src="@drawable/ic_arrow_back"
                            app:tint="@color/white" />

                        <ImageView
                            android:id="@+id/addMember"
                            android:layout_width="@dimen/_30sdp"
                            android:layout_height="@dimen/_30sdp"
                            android:layout_alignParentEnd="true"
                            android:layout_centerVertical="true"
                            android:layout_marginEnd="@dimen/_10sdp"
                            android:contentDescription="@string/error"
                            android:onClick="@{conv_detail::AddParticipants}"
                            android:padding="@dimen/_5sdp"
                            android:src="@drawable/ic_add_member"
                            android:visibility="gone"
                            app:tint="@color/white" />

                        <ImageView
                            android:id="@+id/more"
                            android:layout_width="@dimen/_30sdp"
                            android:layout_height="@dimen/_30sdp"
                            android:layout_alignParentEnd="true"
                            android:layout_centerVertical="true"
                            android:layout_marginEnd="@dimen/_10sdp"
                            android:contentDescription="@string/error"
                            android:onClick="@{conv_detail::More}"
                            android:padding="@dimen/_5sdp"
                            android:src="@drawable/ic_more"
                            app:tint="@color/white" />

                    </RelativeLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_alignParentBottom="true"
                        android:layout_centerHorizontal="true"
                        android:gravity="center_vertical"
                        android:padding="@dimen/_10sdp">

                        <TextView
                            android:id="@+id/title"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:maxLines="2"
                            android:text="@string/title"
                            android:textColor="@color/white"
                            android:textSize="@dimen/_20ssp"
                            android:textStyle="bold" />

                        <ImageView
                            android:id="@+id/edit"
                            android:layout_width="@dimen/_30sdp"
                            android:layout_height="@dimen/_30sdp"
                            android:layout_marginStart="@dimen/_10sdp"
                            android:contentDescription="@string/error"
                            android:onClick="@{conv_detail::OnEdit}"
                            android:padding="@dimen/_5sdp"
                            android:src="@drawable/ic_edit"
                            android:visibility="gone"
                            app:tint="@color/white" />

                        <ImageView
                            android:id="@+id/info"
                            android:layout_width="@dimen/_30sdp"
                            android:layout_height="@dimen/_30sdp"
                            android:layout_marginStart="@dimen/_10sdp"
                            android:contentDescription="@string/error"
                            android:onClick="@{conv_detail::OpenInfo}"
                            android:padding="@dimen/_5sdp"
                            android:src="@drawable/ic_info"
                            android:visibility="gone"
                            app:tint="@color/white" />

                    </LinearLayout>

                </RelativeLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_below="@id/header"
                    android:layout_centerHorizontal="true"
                    android:background="@color/gray"
                    android:orientation="vertical">

                    <LinearLayout
                        android:id="@+id/setDescription"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="@dimen/_1sdp"
                        android:background="@color/white_smoke"
                        android:onClick="@{conv_detail::OpenDescription}"
                        android:orientation="vertical"
                        android:paddingStart="@dimen/_10sdp"
                        android:paddingTop="@dimen/_5sdp"
                        android:paddingEnd="@dimen/_10sdp"
                        android:visibility="gone">

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Description"
                            android:textColor="@color/primary" />

                        <TextView
                            android:id="@+id/groupDescription"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/_5sdp"
                            android:layout_marginBottom="@dimen/_7sdp"
                            android:text="hey..."
                            android:textColor="@color/black"
                            android:textSize="@dimen/_12ssp" />

                    </LinearLayout>

                    <TextView
                        android:id="@+id/addDescription"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/_40sdp"
                        android:layout_marginBottom="@dimen/_1sdp"
                        android:background="@color/white_smoke"
                        android:gravity="center_vertical"
                        android:onClick="@{conv_detail::OpenDescription}"
                        android:paddingStart="@dimen/_10sdp"
                        android:text="@string/add_group_description"
                        android:textSize="@dimen/_13ssp"
                        android:visibility="gone" />

                    <RelativeLayout
                        android:id="@+id/medias"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="@dimen/_1sdp"
                        android:background="@color/white_smoke"
                        android:padding="@dimen/_10sdp"
                        android:visibility="gone">

                        <LinearLayout
                            android:id="@+id/mediaTitle"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:onClick="@{conv_detail::OpenMedia}"
                            android:orientation="horizontal">

                            <TextView
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:text="Media, links and docs"
                                android:textColor="@color/primary" />

                            <TextView
                                android:id="@+id/totalMedias"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:drawableTint="@color/black"
                                android:gravity="center"
                                android:text="124"
                                app:drawableEndCompat="@drawable/ic_right" />

                        </LinearLayout>

                        <androidx.recyclerview.widget.RecyclerView
                            android:id="@+id/mediaList"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_below="@id/mediaTitle"
                            android:nestedScrollingEnabled="true"
                            android:persistentDrawingCache="scrolling"
                            android:scrollbars="none" />

                    </RelativeLayout>

                    <LinearLayout
                        android:id="@+id/participantsLayout"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:visibility="gone">

                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="@dimen/_1sdp"
                            android:background="@color/white_smoke"
                            android:padding="@dimen/_10sdp">

                            <LinearLayout
                                android:id="@+id/participantHeader"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:gravity="center"
                                android:orientation="horizontal">

                                <TextView
                                    android:id="@+id/totalParticipants"
                                    android:layout_width="0dp"
                                    android:layout_height="wrap_content"
                                    android:layout_weight="1"
                                    android:text="24 participants"
                                    android:textColor="@color/primary" />

                                <ImageView
                                    android:id="@+id/search"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:contentDescription="@string/error"
                                    android:onClick="@{conv_detail::OpenSearch}"
                                    android:src="@drawable/ic_search"
                                    app:tint="@color/black" />

                            </LinearLayout>

                            <LinearLayout
                                android:id="@+id/addparticipants"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_below="@id/participantHeader"
                                android:gravity="center"
                                android:onClick="@{conv_detail::AddParticipants}"
                                android:orientation="horizontal">

                                <androidx.cardview.widget.CardView
                                    android:layout_width="@dimen/_40sdp"
                                    android:layout_height="@dimen/_40sdp"
                                    android:layout_margin="@dimen/_5sdp"
                                    app:cardBackgroundColor="@color/primary"
                                    app:cardCornerRadius="@dimen/_20sdp">

                                    <ImageView
                                        android:layout_width="match_parent"
                                        android:layout_height="match_parent"
                                        android:contentDescription="@string/error"
                                        android:padding="@dimen/_10sdp"
                                        android:scaleType="centerCrop"
                                        android:src="@drawable/ic_add_member"
                                        app:tint="@color/white" />

                                </androidx.cardview.widget.CardView>

                                <TextView
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_margin="@dimen/_5sdp"
                                    android:text="@string/add_participants"
                                    android:textSize="@dimen/_13ssp" />

                            </LinearLayout>

                            <View
                                android:id="@+id/div1"
                                android:layout_width="match_parent"
                                android:layout_height="@dimen/_1sdp"
                                android:layout_below="@id/addparticipants"
                                android:background="#10ffffff" />

                            <LinearLayout
                                android:id="@+id/invite"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_below="@id/div1"
                                android:gravity="center"
                                android:onClick="@{conv_detail::Invite}"
                                android:orientation="horizontal">

                                <androidx.cardview.widget.CardView
                                    android:layout_width="@dimen/_40sdp"
                                    android:layout_height="@dimen/_40sdp"
                                    android:layout_margin="@dimen/_5sdp"
                                    app:cardBackgroundColor="@color/primary"
                                    app:cardCornerRadius="@dimen/_20sdp">

                                    <ImageView
                                        android:layout_width="match_parent"
                                        android:layout_height="match_parent"
                                        android:contentDescription="@string/error"
                                        android:padding="@dimen/_10sdp"
                                        android:scaleType="centerCrop"
                                        android:src="@drawable/ic_invite_link"
                                        app:tint="@color/white" />

                                </androidx.cardview.widget.CardView>

                                <TextView
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_margin="@dimen/_5sdp"
                                    android:text="@string/invite_via_link"
                                    android:textSize="@dimen/_13ssp" />

                            </LinearLayout>

                            <View
                                android:id="@+id/div2"
                                android:layout_width="match_parent"
                                android:layout_height="@dimen/_1sdp"
                                android:layout_below="@id/invite"
                                android:background="#10ffffff" />

                            <androidx.recyclerview.widget.RecyclerView
                                android:id="@+id/participants"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_below="@id/div2"
                                android:nestedScrollingEnabled="true"
                                android:persistentDrawingCache="scrolling"
                                android:scrollbars="none" />

                            <TextView
                                android:id="@+id/noParticipant"
                                android:layout_width="match_parent"
                                android:layout_height="@dimen/_55sdp"
                                android:layout_below="@id/participantHeader"
                                android:gravity="center"
                                android:text="@string/no_participant"
                                android:textColor="#bbffffff"
                                android:visibility="gone" />

                        </RelativeLayout>

                        <TextView
                            android:id="@+id/exitGroup"
                            android:layout_width="match_parent"
                            android:layout_height="@dimen/_40sdp"
                            android:layout_marginBottom="@dimen/_1sdp"
                            android:background="@color/white_smoke"
                            android:drawablePadding="@dimen/_15sdp"
                            android:gravity="center_vertical"
                            android:padding="@dimen/_10sdp"
                            android:paddingStart="@dimen/_10sdp"
                            android:text="@string/exit_group"
                            android:textColor="@android:color/holo_red_dark"
                            android:textSize="@dimen/_13ssp"
                            app:drawableStartCompat="@drawable/ic_logout"
                            app:drawableTint="@android:color/holo_red_dark" />

                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/userLayout"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="@dimen/_1sdp"
                            android:background="@color/white_smoke"
                            android:padding="@dimen/_10sdp">

                            <TextView
                                android:id="@+id/aboutHeader"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="@string/about_and_phone_number"
                                android:textColor="@color/primary" />

                            <LinearLayout
                                android:id="@+id/statusLayout"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_below="@id/aboutHeader"
                                android:orientation="vertical">

                                <TextView
                                    android:id="@+id/status"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:paddingTop="@dimen/_7sdp"
                                    android:text="status"
                                    android:textColor="@color/black"
                                    android:textSize="@dimen/_14ssp" />

                                <TextView
                                    android:id="@+id/statusDate"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:text="January 27"
                                    android:textSize="@dimen/_10ssp" />

                            </LinearLayout>

                            <LinearLayout
                                android:id="@+id/numberLayout"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_below="@id/statusLayout"
                                android:orientation="horizontal">

                                <LinearLayout
                                    android:layout_width="0dp"
                                    android:layout_height="wrap_content"
                                    android:layout_weight="1"
                                    android:orientation="vertical">

                                    <TextView
                                        android:id="@+id/number"
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:paddingTop="@dimen/_7sdp"
                                        android:text="+92 323 4896228"
                                        android:textColor="@color/black"
                                        android:textSize="@dimen/_13ssp" />

                                    <TextView
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:text="Mobile"
                                        android:textSize="@dimen/_10ssp" />

                                </LinearLayout>

                                <LinearLayout
                                    android:layout_width="0dp"
                                    android:layout_height="match_parent"
                                    android:layout_weight="1"
                                    android:gravity="center"
                                    android:orientation="horizontal">

                                    <LinearLayout
                                        android:layout_width="0dp"
                                        android:layout_height="match_parent"
                                        android:layout_weight="1"
                                        android:gravity="center">

                                        <ImageView
                                            android:id="@+id/btnChat"
                                            android:layout_width="@dimen/_20sdp"
                                            android:layout_height="@dimen/_20sdp"
                                            android:contentDescription="@string/error"
                                            android:onClick="@{conv_detail::Message}"
                                            android:src="@drawable/ic_chat" />

                                    </LinearLayout>

                                    <LinearLayout
                                        android:layout_width="0dp"
                                        android:layout_height="match_parent"
                                        android:layout_weight="1"
                                        android:gravity="center">

                                        <ImageView
                                            android:id="@+id/btnAudioCall"
                                            android:layout_width="@dimen/_20sdp"
                                            android:layout_height="@dimen/_20sdp"
                                            android:contentDescription="@string/error"
                                            android:onClick="@{conv_detail::AudioCall}"
                                            android:src="@drawable/ic_call" />

                                    </LinearLayout>

                                    <LinearLayout
                                        android:layout_width="0dp"
                                        android:layout_height="match_parent"
                                        android:layout_weight="1"
                                        android:gravity="center">

                                        <ImageView
                                            android:id="@+id/btnVideoCall"
                                            android:layout_width="@dimen/_20sdp"
                                            android:layout_height="@dimen/_20sdp"
                                            android:contentDescription="@string/error"
                                            android:onClick="@{conv_detail::VideoCall}"
                                            android:src="@drawable/ic_videocall" />

                                    </LinearLayout>

                                </LinearLayout>

                            </LinearLayout>

                        </RelativeLayout>

                        <RelativeLayout
                            android:id="@+id/commonGroups"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="@dimen/_1sdp"
                            android:background="@color/white_smoke"
                            android:padding="@dimen/_10sdp"
                            android:visibility="gone">

                            <TextView
                                android:id="@+id/groupsInCommonn"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="@string/groups_in_common"
                                android:textColor="@color/primary" />

                            <androidx.recyclerview.widget.RecyclerView
                                android:id="@+id/groupList"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_below="@id/groupsInCommonn"
                                android:nestedScrollingEnabled="true"
                                android:persistentDrawingCache="scrolling"
                                android:scrollbars="none" />

                        </RelativeLayout>

                        <TextView
                            android:id="@+id/blockUser"
                            android:layout_width="match_parent"
                            android:layout_height="@dimen/_40sdp"
                            android:layout_marginBottom="@dimen/_1sdp"
                            android:background="@color/white_smoke"
                            android:drawablePadding="@dimen/_15sdp"
                            android:gravity="center_vertical"
                            android:onClick="@{conv_detail::BlockUser}"
                            android:paddingStart="@dimen/_10sdp"
                            android:text="@string/block"
                            android:textColor="@android:color/holo_red_dark"
                            android:textSize="@dimen/_13ssp"
                            app:drawableStartCompat="@drawable/ic_block"
                            app:drawableTint="@android:color/holo_red_dark" />

                    </LinearLayout>

                </LinearLayout>

            </RelativeLayout>

        </androidx.core.widget.NestedScrollView>

    </RelativeLayout>

</layout>