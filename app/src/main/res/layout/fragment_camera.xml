<layout>

    <data>

        <variable
            name="camera_fragment"
            type="com.mr_w.resourceplus.fragments.camera_fragment.CameraViewModel" />
    </data>

    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/black">

        <com.otaliastudios.cameraview.CameraView
            android:id="@+id/camera_view"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_centerInParent="true"
            android:layout_gravity="center"
            android:keepScreenOn="true"
            android:rotationX="0"
            android:soundEffectsEnabled="false"
            app:cameraAudio="on"
            app:cameraFacing="front"
            app:cameraFlash="off"
            app:cameraGestureLongTap="autoFocus"
            app:cameraGesturePinch="zoom"
            app:cameraGestureTap="autoFocus"
            app:cameraPictureFormat="jpeg"
            app:cameraPlaySounds="false"
            app:cameraPreview="glSurface"
            app:cameraVideoCodec="deviceDefault"
            app:cameraWhiteBalance="auto" />

        <androidx.cardview.widget.CardView
            android:id="@+id/counterLL"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="@dimen/_10sdp"
            android:visibility="gone"
            app:cardBackgroundColor="@android:color/holo_red_dark"
            app:cardCornerRadius="@dimen/_5sdp"
            app:contentPadding="@dimen/_5sdp">

            <TextView
                android:id="@+id/video_counter"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingHorizontal="@dimen/_10sdp"
                android:text="@string/pix_counter_number"
                android:textColor="@android:color/white"
                android:textSize="12sp" />

        </androidx.cardview.widget.CardView>

        <ImageView
            android:id="@+id/primary_click_background"
            android:layout_width="@dimen/_50sdp"
            android:layout_height="@dimen/_50sdp"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="@dimen/_36sdp"
            android:background="@drawable/red_circle"
            android:contentDescription="@string/click_button"
            android:visibility="gone" />

        <ImageView
            android:id="@+id/primary_click_button"
            android:layout_width="@dimen/_60sdp"
            android:layout_height="@dimen/_60sdp"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="@dimen/_30sdp"
            android:layout_marginBottom="@dimen/_31sdp"
            android:background="@drawable/ring"
            android:contentDescription="@string/click_button" />

        <FrameLayout
            android:id="@+id/flash_button"
            android:layout_width="@dimen/_40sdp"
            android:layout_height="@dimen/_40sdp"
            android:layout_alignParentBottom="true"
            android:layout_marginEnd="@dimen/_40sdp"
            android:layout_marginBottom="@dimen/_40sdp"
            android:layout_toStartOf="@id/primary_click_button"
            android:background="@drawable/selection"
            android:padding="@dimen/_10sdp"
            android:visibility="visible">

            <ImageView
                android:id="@+id/flash_image"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:contentDescription="@string/camera_flash_button"
                android:src="@drawable/ic_flash_off_black_24dp" />
        </FrameLayout>

        <ImageView
            android:id="@+id/lens_facing"
            android:layout_width="@dimen/_40sdp"
            android:layout_height="@dimen/_40sdp"
            android:layout_alignParentBottom="true"
            android:layout_marginStart="@dimen/_40sdp"
            android:layout_marginBottom="@dimen/_40sdp"
            android:layout_toEndOf="@id/primary_click_button"
            android:background="@drawable/selection"
            android:contentDescription="@string/lens_facing_button"
            android:padding="@dimen/_10sdp"
            android:src="@drawable/ic_photo_camera" />

        <TextView
            android:id="@+id/message_bottom"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="@dimen/_7sdp"
            android:text="@string/pix_bottom_message_with_video"
            android:textColor="#fff"
            android:textSize="@dimen/_11ssp" />

    </RelativeLayout>

</layout>